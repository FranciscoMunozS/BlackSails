<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <h3>Sistema Boletas de Garantía</h3>
  </div>
  <div class="col-md-6">
    <p class="text-right">
      <%= link_to 'Agregar Nuevo Registro', new_guarantee_path, class: 'btn btn-primary'  %>
    </p>
  </div>
</div>
<hr>

<table class="table table-bordered" id="dttb">
  <thead>
    <tr>
      <th class="text-center">Correlativo</th>
      <th class="text-center">Nº Ingreso</th>
      <th class="text-center">Detalle</th>
      <th class="text-center">Valor de Garantía</th>
      <th class="text-center">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @guarantees.each do |guarantee| %>
      <tr>
        <td class="text-center"><%= guarantee.correlative %></td>
        <td class="text-center"><%= guarantee.income_number %></td>
        <td class="text-center"><%= guarantee.detail %></td>
        <td class="text-center"><%= number_to_currency_clp(guarantee.value_guarantee) %></td>
        <td class="text-center">
          <div class="btn-group btn-group-sm">
            <%= link_to 'Imprimir', guarantee_path(guarantee), class: 'btn btn-primary' %>
            <%= link_to 'Editar', edit_guarantee_path(guarantee), class: 'btn btn-primary' %>
            <%= link_to 'Eliminar', guarantee, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
